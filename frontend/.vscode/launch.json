    "version": "0.2.0",
    "configurations": [
        {            
            "name": "npm run storybook",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run storybook",
            "env": {
                "DEBUG": "* npm test"
            }
        },
        {            
            "name": "Add licenses",
            "request": "launch",
            "type": "node-terminal",
            "command": "docker run -it -v ${PWD}:/src ghcr.io/google/addlicense src",
        },        
        {
            "name": "Cloud Build: Build docker image",
            "request": "launch",
            "command": "gcloud builds submit --tag gcr.io/python-docs-samples-tests/forecasting-live-demo-frontend --timeout=86400s",
            "type": "node-terminal",
        },
        {
            "name": "Cloud Run: Deploy docker image",
            "request": "launch",
            "command": "gcloud run deploy forecasting-live-demo --region=us-central1 --image=gcr.io/python-docs-samples-tests/forecasting-live-demo-frontend:latest --platform=managed --cpu=2 --memory=8G --timeout=3600 --allow-unauthenticated",
            "type": "node-terminal"
        },
    ]
}