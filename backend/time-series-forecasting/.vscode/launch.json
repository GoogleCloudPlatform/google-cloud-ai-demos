    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {            
            "name": "Add licenses",
            "request": "launch",
            "type": "node-terminal",
            "command": "docker run -it -v ${PWD}:/src ghcr.io/google/addlicense src",
        },
        {
            "name": "Start local server (uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--port=8000"
            ],
            "justMyCode": true,
        },
        {
            "name": "Cloud Build: Build docker image",
            "request": "launch",
            "command": "gcloud builds submit --tag gcr.io/python-docs-samples-tests/forecasting-live-demo-backend --timeout=86400s",
            "type": "node-terminal",
        },
        {
            "name": "Cloud Run: Build and deploy docker image",
            "request": "launch",
            "command": "gcloud beta run deploy built-on-vertex-ai-backend --source . --region=us-central1 --platform=managed --cpu=2 --memory=8G --timeout=3600 --allow-unauthenticated --session-affinity --min-instances=1",
            "type": "node-terminal"
        },
    ]
}